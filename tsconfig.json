{
    "compilerOptions": {
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "ES2018",
        "outDir": "build"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "include": ["./src/**/*"]
}
